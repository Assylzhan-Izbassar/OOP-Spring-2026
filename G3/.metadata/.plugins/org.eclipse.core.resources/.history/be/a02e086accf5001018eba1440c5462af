package test;

public class BinarySearch {
	int[] arr;
	int l = 0;
	int r;
	
	public BinarySearch(int[] arr, int n) {
		this.arr = arr;
		r = arr.length;
	}
	
	public int search(int target) {
		while (l < r) {
			int mid = l + (r - l) / 2;
			
			if (arr[mid] == target) {
				return mid;
			} else if (arr[mid] > target) {
				r = mid;
			} else {
				l = mid + 1;
			}
		}
		return -1;
	}
}
