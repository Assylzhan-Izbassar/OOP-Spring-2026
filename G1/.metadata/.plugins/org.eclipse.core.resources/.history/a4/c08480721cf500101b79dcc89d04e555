package binarySearch;

public class BinarySearch {
	int[] arr;
	int l, r;
	
	BinarySearch(int[] arr, int n) {
		l = 0;
		r = n;
		this.arr = arr;
	}
	
	int search(int target) {
		int result = -1;
		
		while(l < r) {
			int mid = l + (r - l) / 2;
			
			if (arr[mid] == target) {
				result = mid;
				break;
			} else if (arr[mid] > target) {
				r = mid;
			} else {
				l = mid + 1;
			}
		}
		System.out.println(result);
	}
}
